<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- <mapper namespace="org.mybatis.example.BlogMapper"> -->
<mapper namespace="mapper.user">	<!-- UserDAOImpl의 NS -->

  <insert id="join">
  insert into tab_user (u_id, u_pw, u_name) values (#{u_id}, #{u_pw}, #{u_name} ) 
  </insert>
  
  
  <select id="loginCheck" resultType="String">
  	select u_name from tab_user where u_id=#{u_id} and u_pw=#{u_pw}
  </select>
  
  <select id="list" resultType="kr.co.domain.UserDTO">
  select * from tab_user
  </select>
  
  <select id="selectById" resultType="kr.co.domain.UserDTO">
  select * from tab_user where u_id = #{u_id}
  </select>
    
  
  <update id="update">
 update tab_user set u_id=#{u_id}, u_name = #{u_name} where u_pw=#{u_pw}
  </update>
  
  <select id="updateui" resultType="kr.co.domain.UserDTO">
  select * from tab_user where u_id=#{u_id}
  </select>
  
  <delete id="delete">
delete from tab_user where u_id=#{u_id}
  
  </delete>
  
 
</mapper>